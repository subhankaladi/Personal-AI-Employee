# AI Employee Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's already in .gitignore)

# ============================================================================
# GMAIL CONFIGURATION
# ============================================================================
# Setup: Complete GMAIL_SETUP.md to get credentials.json

# Path to Google OAuth credentials (download from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=./credentials.json

# Gmail API scopes (do not modify)
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send https://www.googleapis.com/auth/gmail.modify

# How often to check for new emails (seconds)
GMAIL_CHECK_INTERVAL=120

# ============================================================================
# LINKEDIN CONFIGURATION
# ============================================================================
# Setup: Complete LINKEDIN_SETUP.md to get session/credentials

# LinkedIn email/username
LINKEDIN_EMAIL=your-email@gmail.com

# LinkedIn password or app-specific password
# WARNING: This will be stored locally. Use a strong password.
LINKEDIN_PASSWORD=your-app-password

# LinkedIn session storage path (Playwright will maintain session here)
LINKEDIN_SESSION_PATH=./linkedin_session

# ============================================================================
# WHATSAPP CONFIGURATION
# ============================================================================
# Setup: Complete WHATSAPP_SETUP.md

# WhatsApp Web session storage path (Playwright will maintain session here)
WHATSAPP_SESSION_PATH=./whatsapp_session

# How often to check for new WhatsApp messages (seconds)
WHATSAPP_CHECK_INTERVAL=30

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Vault path (usually ./AI_Employee_Vault)
VAULT_PATH=./AI_Employee_Vault

# Enable dry-run mode (test without making changes)
DRY_RUN=false

# Enable debug logging
DEBUG=false

# ============================================================================
# APPROVAL THRESHOLDS
# ============================================================================
# These control which actions require human approval

# Email: Always approve to known recipients?
EMAIL_AUTO_APPROVE_KNOWN=true

# Email: Maximum auto-approval email length (chars)
EMAIL_MAX_LENGTH_AUTO_APPROVE=500

# Payment: Maximum auto-approve amount (dollars)
PAYMENT_AUTO_APPROVE_THRESHOLD=50

# Payment: Maximum amount before escalation (dollars)
PAYMENT_ESCALATION_THRESHOLD=1000

# LinkedIn: Auto-approve scheduled posts?
LINKEDIN_AUTO_APPROVE_SCHEDULED=true

# ============================================================================
# SCHEDULING
# ============================================================================

# Morning briefing time (24-hour format, UTC)
BRIEFING_HOUR=08
BRIEFING_MINUTE=00

# LinkedIn post time (24-hour format, UTC)
LINKEDIN_POST_HOUR=10
LINKEDIN_POST_MINUTE=00

# Weekly audit day (0=Monday, 6=Sunday)
AUDIT_DAY=6

# Audit time (24-hour format, UTC)
AUDIT_HOUR=18
AUDIT_MINUTE=00

# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum emails to send per hour
MAX_EMAILS_PER_HOUR=20

# Maximum LinkedIn posts per day
MAX_LINKEDIN_POSTS_PER_DAY=3

# Maximum WhatsApp messages per hour
MAX_WHATSAPP_PER_HOUR=50

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./ai_employee.log

# Keep logs for N days
LOG_RETENTION_DAYS=90
